.ImageCheckCodeDialog-container {

    .ImageCheckCodeDialog-error {
        display: none;
        position: relative;
        height: 16px;
        line-height: 16px;
        font-size: 12px;
        color: #f00;
        text-align: center;
        margin-top: 3px;
    }

    .ImageCheckCodeDialog-image-container {
        text-align: center;
        margin-top: 10px;
    }

    .ImageCheckCodeDialog-image {
        width: 80px;
        height: 25px;
        vertical-align: middle;
    }

    .ImageCheckCodeDialog-refresh {
        color: #1c89e6;
        font-size: 12px;
        margin-left: 20px;
    }

    input {
        width: 100%;
        height: 32px;
        font-size: 12px;
        line-height: 20px;
        padding: 6px 10px;
        box-sizing: border-box;
        border: 1px solid #dcdcdc;
    }

    .ImageCheckCodeDialog-input-container {
        margin-top: 16px;
    }
}
