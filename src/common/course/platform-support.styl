.security-block{
    padding: 20px 5px 5px 5px;
    background: #fff;
    margin-top: 10px;
    
    .security-title{
        font-size: 18px;
        color: #3c3d3d;
        margin-left: 15px;
        padding-left: 5px;
        border-left: 2px solid #ff6c00;
        line-height: 1;
    }
    span{
        background-image: url("./icon.png");
        width: 22px;
        height: 22px;
        display: inline-block;
        background-size: auto 22px;
    }
    .safe{
        background-position: 0 0;
    }
    .tuikuan{
        background-position: 66px 0;
    }
    .haoke{
        background-position: 44px 0;
    }
    .renzheng{
        background-position: 22px 0;
    }
    .security-p{
        list-style: none;
        margin: 25px 5px 10px 5px;
        color: #6d6d6e;
        font-size: 12px;
        li{
            width: 24%;
            text-align: center;
            position:relative;
            display:inline-block;
        }
        .icon{
            margin: 0 auto;
            height: 22px;
            width: 22px;
            padding-bottom: 8px;
        }
    }
    .security-txt{
      font-size:13px;
      color:#9d9e9e;
      line-height:19px;
      padding: 0 10px;
    }
}